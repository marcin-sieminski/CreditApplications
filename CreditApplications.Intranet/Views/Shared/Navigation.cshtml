@model IntranetViewModel
@using CreditApplications.Intranet.Helpers

<nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
    <div class="container-fluid">
        <a class="navbar-brand" asp-area="" asp-controller="Intranet" asp-action="Index" asp-route-id=""><i class="fas fa-university"></i>Credit Applications Intranet</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarColor02">
            <ul class="navbar-nav me-auto">
                
                <li class="nav-item">
                    <a class="nav-link @Html.IsActive("Intranet", "Index")" asp-area="" asp-controller="Intranet" asp-action="Index" asp-route-id="">
                        Intranet
                    </a>
                </li>

                @foreach (var item in Model.Pages)
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Intranet" asp-action="Index" asp-route-id="@item.Id">
                            @item.LinkTitle
                        </a>
                    </li>
                }

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Administration</a>

                    <div class="dropdown-menu">
                        <a class="dropdown-item" asp-controller="Page" asp-action="Index">Pages list</a>
                        <a class="dropdown-item" asp-controller="Page" asp-action="Create">New page</a>

                        <div class="dropdown-divider"></div>

                        <a class="dropdown-item" asp-controller="Article" asp-action="Index">Articles list</a>
                        <a class="dropdown-item" asp-controller="Article" asp-action="Create">New article</a>
                    </div>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">User</a>

                    <div class="dropdown-menu">
                        <partial name="_LoginPartial" />
                    </div>
                </li>
            </ul>
            <form class="d-flex">
                <input class="form-control me-sm-2" type="search" placeholder="Search">
                <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </div>
</nav>
