@model IntranetViewModel

@{
    ViewData["Title"] = "Dodaj stronę";
    Layout = "_Layout";
}

<div>
    <h4>Dodaj stronę</h4>
    <hr />
    <div class="container-fluid">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            

            <div class="form-group mt-3">
                <label asp-for="PageModel.Title" class="control-label"></label>
                <input asp-for="PageModel.Title" class="form-control" />
                <span asp-validation-for="PageModel.Title" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="PageModel.Description" class="control-label"></label>
                <textarea class="form-control" style="height: 200px" aria-label="Textarea" asp-for="PageModel.Description"></textarea>
                <span asp-validation-for="PageModel.Description" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-3">
                <label asp-for="PageModel.LinkTitle" class="control-label"></label>
                <input asp-for="PageModel.LinkTitle" class="form-control" />
                <span asp-validation-for="PageModel.LinkTitle" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="PageModel.Position" class="control-label"></label>
                <input asp-for="PageModel.Position" class="form-control" />
                <span asp-validation-for="PageModel.Position" class="text-danger"></span>
            </div>

            <div class="form-group mt-3 m-b1">
                <input class="btn btn-secondary mt-1 me-1" type="submit" value="Dodaj" />
                <a class="btn btn-secondary mt-1 me-1" asp-action="Index">Powrót</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
