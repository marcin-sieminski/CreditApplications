@model IEnumerable<PageModel>
@{
    ViewData["Title"] = "Pages list";
    Layout = "_Layout";
}
<h4>Pages</h4>
<hr />
<a asp-action="Create" class="btn btn-secondary" role="button">Add new page</a>
<hr />

<div class="container-fluid">
    <div class="row">

        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.Id)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Title)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Body)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.LinkTitle)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Position)</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-primary">
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                    <td>@Html.DisplayFor(modelItem => item.Body)</td>
                    <td>@Html.DisplayFor(modelItem => item.LinkTitle)</td>
                    <td>@Html.DisplayFor(modelItem => item.Position)</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>