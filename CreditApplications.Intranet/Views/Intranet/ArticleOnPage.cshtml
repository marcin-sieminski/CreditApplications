@model IEnumerable<ArticleModel>
<div class="section">
    <div class="d-flex flex-wrap">
        @foreach (var item in Model)
        {
            <div class="card border-secondary m-3" style="max-width: 20rem;">
                <div class="card-header bg-secondary">
                    <a class="text-decoration-none text-white" asp-controller="Intranet" asp-action="Read" asp-route-id="@item.PageId" asp-route-articleId="@item.Id">@item.Title</a>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        @if (item.Body.Length > 200)
                        {
                            <s class="text-decoration-none">@item.Body.Substring(0, 200)...</s>
                        }
                        else
                        {
                            @item.Body
                        }
                    </p>
                </div>
            </div>
        }
    </div>
</div>
