@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Usuń dane użytkownika";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>
<div class="col-md-6">
    <div class="alert alert-warning" role="alert">
        <p>
            <strong>Usunięcie danych spowoduje usunięcie konta użytkownika i nie może zostać cofnięte.</strong>
        </p>
    </div>

    <div>
        <form id="delete-user" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            @if (Model.RequirePassword)
            {
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Podaj hasło." />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            }
            <button class="w-100 btn btn-danger" type="submit">Usuń dane oraz konto użytkownika</button>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
