@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Wyślij ponownie email potwierdzający";
}

<h4>@ViewData["Title"]</h4>
<h5>Podaj email.</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-secondary">Wyślij ponownie</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
