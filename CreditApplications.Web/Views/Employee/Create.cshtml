@model EmployeeViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";
}

<div>
    <h4>Create employee</h4>
    <hr />
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="EmployeeModel.FirstName" class="control-label"></label>
                <input asp-for="EmployeeModel.FirstName" class="form-control" />
                <span asp-validation-for="EmployeeModel.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeModel.LastName" class="control-label"></label>
                <input asp-for="EmployeeModel.LastName" class="form-control" />
                <span asp-validation-for="EmployeeModel.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeModel.DepartmentId" class="control-label"></label>
                <select asp-for="EmployeeModel.DepartmentId" asp-items="Model!.AvailableDepartmentsSelectList" class="form-control"></select>
                <span asp-validation-for="EmployeeModel.DepartmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeModel.RoleId" class="control-label"></label>
                <select asp-for="EmployeeModel.RoleId" asp-items="Model!.AvailableRolesSelectList" class="form-control"></select>
                <span asp-validation-for="EmployeeModel.RoleId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-primary" asp-action="List">Back to list</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
